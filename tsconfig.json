{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "inlineSourceMap": true,
        "outDir": "./dist",
        "newLine": "lf",
        "pretty": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": ["src"]
}
